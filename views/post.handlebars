<div>
    <div class="post-card">
        <div class="post-container">

            <div class="post-header">
                <h1>{{title}}</h1>
            </div>

            <div class="post-author">
                <p class="post-name">{{user.username}}</p>
            </div>

            <div class="post-content">
                <p>{{content}}
            </div>
            <div>
                <p class="post-date">{{format_date createdAt}}</p>
            </div>
        </div>

    </div>

</div>

<div class="login-header">
  <p>This post has {{comments.length}} comments</p>
</div>
{{#each comments as |comment|}}
<div class="comment-card">
  <h1 class="comment-head">{{comment.user.username}}</h1>
  <p class="comment-content">{{comment.comment}}</p>
  <p class="comment-date">{{format_date comment.createdAt}}</p>
</div>
{{/each}}

{{#if logged_in}}
<div class="login-header">
  <h1>Add a comment</h1>
</div>
<div>
  <form id="comment-form{{post.id}}" class="login-form">
    <div class="form-group">
      <label class="custom-field">comment</label>
      <input id="post-comment{{id}}" data-type="{{post.id}}" for="pass" type="text" class="form-control">
    </div>
    <button type="submit" data-id="{{id}}" id="commentBtn" class="btn btn-primary custom-btn">Post</button>
</form>
</div>

{{/if}}

<script src="/js/post.js"></script>